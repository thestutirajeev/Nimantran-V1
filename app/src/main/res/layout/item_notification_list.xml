<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="notification"
            type="com.example.nimantran.models.Notification" />
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewNotification"
        android:padding="4dp"
        android:backgroundTint="@color/secondaryColor"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:src="@drawable/ic_notifications"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/imageViewDeleteNotification"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                android:layout_width="16dp"

                android:src="@drawable/ic_delete"
                app:layout_constraintBottom_toBottomOf="@id/textViewNotificationDateTime"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewNotificationHeading"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="@{notification.subject}"
                android:textColor="@color/white"
                android:textSize="25sp"
                tools:text="Heading"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/imageView1"
                app:layout_constraintStart_toEndOf="@id/imageView1"
                app:layout_constraintTop_toTopOf="@id/imageView1"></TextView>

            <TextView
                android:id="@+id/textViewNotificationBody"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="5dp"
                tools:text="Body"
                android:text="@{notification.body}"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@id/textViewNotificationDateTime"
                app:layout_constraintStart_toStartOf="@+id/textViewNotificationHeading"
                app:layout_constraintTop_toBottomOf="@id/textViewNotificationHeading" />

            <TextView
                android:id="@+id/textViewNotificationDateTime"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_width="wrap_content"
                android:text="11 Feb"
                android:textColor="@color/white"
                android:textSize="11dp"
                app:layout_constraintBottom_toBottomOf="@id/imageViewDeleteNotification"
                app:layout_constraintEnd_toStartOf="@id/imageViewDeleteNotification"
                app:layout_constraintTop_toTopOf="@id/imageViewDeleteNotification" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>


